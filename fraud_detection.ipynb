from src.data_preprocessing import load_data, preprocess_data
from src.model_pipeline import apply_smote, feature_selection, train_model, evaluate_model
from src.utils import save_model

# Load and preprocess data
df = load_data('../data/transactions.csv')
X_train, X_test, y_train, y_test = preprocess_data(df, target_column='fraud_flag')

# Apply SMOTE
X_res, y_res = apply_smote(X_train, y_train)

# Feature selection
X_res_selected, selector = feature_selection(X_res, y_res, k=15)
X_test_selected = selector.transform(X_test)

# Train model
model = train_model(X_res_selected, y_res, model_type='RandomForest')

# Evaluate
evaluate_model(model, X_test_selected, y_test)

# Save model
save_model(model, '../models/fraud_model.pkl')
